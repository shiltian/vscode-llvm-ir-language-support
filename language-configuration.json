{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "<", "close": ">" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "c\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*define\\s",
      "end": "^\\s*\\}"
    }
  },
  "wordPattern": "[@%][-a-zA-Z$._][-a-zA-Z$._0-9]*|[@%][0-9]+|[@%]\"[^\"]+\"|[-a-zA-Z$._][-a-zA-Z$._0-9]*"
}

